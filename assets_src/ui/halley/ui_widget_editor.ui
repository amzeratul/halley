widget: { class: image, image: "halley_ui/ui_window.png", innerBorder: [ 4, 4, 4, 4 ], colour: $ui_backgroundBox, size: [400, 10] }
sizer: { type: vertical }
children:
- widget: { id: scrollBarPane, class: scrollBarPane }
  sizer: { type: vertical, gap: 8 }
  proportion: 1
  border: [0, 0, 0, 0]
  children:
  - widget: { id: parentWidgetBox, class: image, image: "$ui_title_capsule", colour: $ui_staticBoxSubdue }
    sizer: { type: vertical }
    children:
    - widget: { class: label, id: parentClassLabel, text: Parent }
      fill: centre
    - widget: { id: parentWidgetContents, class: widget }
      border: [ 4, 4, 4, 4 ]
      sizer: { type: vertical }
      children: []
  - widget: { id: widgetBox, class: image, image: "$ui_title_capsule", colour: $ui_staticBoxSubdue }
    sizer: { type: vertical }
    children:
    - sizer: { type: horizontal }
      fill: centre
      children:
      - widget: { id: classIcon, class: image }
        border: [0, 0, 4, 0]
        fill: centre
      - widget: { id: classLabel, class: label, text: Widget }
        fill: centre
    - widget: { id: widgetContents, class: widget }
      border: [ 4, 4, 4, 4 ]
      sizer: { type: vertical }
      children: []
  - widget: { id: genericWidgetBox, class: image, image: "$ui_title_capsule", colour: $ui_staticBoxSubdue }
    sizer: { type: vertical }
    children:
    - widget: { class: label, text: Base Widget }
      fill: centre
    - widget: { id: genericWidgetContents, class: widget }
      border: [ 4, 4, 4, 4 ]
      sizer: { type: vertical }
      children: []
  - widget: { id: fillBox, class: image, image: "$ui_title_capsule", colour: $ui_staticBoxSubdue }
    sizer: { type: vertical }
    children:
    - widget: { class: label, text: Fill }
      fill: centre
    - widget: { id: fillContents, class: widget }
      border: [ 4, 4, 4, 4 ]
      sizer: { type: vertical }
      children: []
  - widget: { id: spacerBox, class: image, image: "$ui_title_capsule", colour: $ui_staticBoxSubdue }
    sizer: { type: vertical }
    children:
    - widget: { class: label, text: Spacer }
      fill: centre
    - widget: { id: spacerContents, class: widget }
      border: [ 4, 4, 4, 4 ]
      sizer: { type: vertical }
      children: []
  - widget: { id: sizerBox, class: image, image: "$ui_title_capsule", colour: $ui_staticBoxSubdue }
    sizer: { type: vertical }
    children:
    - widget: { class: label, text: Sizer }
      fill: centre
    - widget: { id: sizerContents, class: widget }
      border: [ 4, 4, 4, 4 ]
      sizer: { type: vertical }
      children: []